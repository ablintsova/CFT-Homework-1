<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".service.BgServiceFragment"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="screen">


    <Button
            android:text="@string/btnStartService_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnStartService"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

    <Button
            android:text="@string/btnStopService_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnStopService"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/btnStartService"
            android:layout_marginTop="8dp" />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvServiceState"
            app:layout_constraintTop_toBottomOf="@+id/btnStopService"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp"
            tools:text="Состояние сервиса"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>